{
    "name": "MatrixOne",
    "description": "Get the background of the page matrixy.",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action" :{
        "default_title" :"unleash the matrix effect on the web page",
        "default_icon" : "icons/icon.png"
    },
    "icons" :{
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    },
    "permissions" :[
        "activeTab"
    ],
    "background" :{
        "scripts" :["background.js"],
        "persistent" :false
    }
  }